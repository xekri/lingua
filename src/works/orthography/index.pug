extend /_layout.pug

mixin toTds(xs)
  for x in xs
    td= x

mixin toTrs(xss, sep="|")
  for xs in xss
    tr
      +toTds(xs.split(sep))
        td= x

mixin sups(xs, sep, mid, end)
  for x, i in xs
    - let [a, b] = x.split(sep)
    if i !== 0
      | #{mid}
    | #{a}
    sup= b
  | #{end}

