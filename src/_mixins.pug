mixin jump(from, to)
	html
		span(style="display: none")#0= from
		span(style="display: none")#1= to
		head
			script.
				window.location.replace(window.location.href.replace(
					document.getElementById("0").innerHTML,
					document.getElementById("1").innerHTML
				));

mixin div(title)
	.my-div(id=title)
		block

mixin ruby(main, above)
	ruby
		| #{main}
		rt= above

mixin section(title, tags)
	section(id=title)
		if tags
			.tags
				for tag in tags
					.tag= tag
		if title
			h1
				a(href="#" + title) #
				| #{" "}
				| #{title}
		block

mixin tds(xs)
	for x in xs
		td= x

mixin ths(xs)
	for x in xs
		th= x

mixin trs(xss)
	for xs in xss
		tr
			+tds(xs)

mixin thsTrs(xs, yss)
	for ys, i in yss
		tr
			th= xs[i]
			for y in ys
				td= y

mixin thTrs(xss)
	for xs in xss
		tr
			th= xs[0]
			for x in xs.slice(1)
				td= x