	+section("conjugation")
		.tables
			table
				caption suffix
				tr
					th
					th(colspan=3) Sg
					th(colspan=3) Pl
				tr
					th
					for i in [0, 1]
						th 1
						th 2
						th 3
				tr
					th active A
					td -⌫ō
					td(rowspan=2) -ˉs
					td(rowspan=2) -t
					td(rowspan=2) -ˉmus
					td(rowspan=2) -ˉtis
					td(rowspan=2) -nt
				tr
					th active B
					td -m

				tr
					th passive A
					td -⌫or
					td(rowspan=2) -ˉris
					td(rowspan=2) -ˉtur
					td(rowspan=2) -ˉmur
					td(rowspan=2) -ˉminī
					td(rowspan=2) -ntur
				tr
					th passive B
					td -r

			table
				caption esse
				tr
					th
					th(colspan=3) imperfect
				tr
					th
					th present
					th past
					th future
				tr
					th active
					td: ul
						li <del>e</del>s-um
						li es-<del>s</del>
						li es-t
						li <del>e</del>s-umus
						li es-tis
						li <del>e</del>s-unt
					td era-{$voice suffix B}
					td: ul
						li eri-⌫ō
						li eri-s
						li eri-t
						li eri-mus
						li eri-tis
						li eri-⌫unt

		table.center
			tr
				th
				th
				th(colspan=3) imperfect
				th(colspan=3) perfect
			tr
				th
				th
				for i in [0, 1]
					th present
					th past
					th future
			tr
				th(rowspan=2) indicative
				th active
				td(rowspan=2) ama-{$voice suffix A}
				td(rowspan=2) ama-ˉba-{$voice suffix B}
				td: ul
					li ama-ˉbi-⌫ō
					li ama-ˉbi-s
					li ama-ˉbi-t
					li ama-ˉbi-mus
					li ama-ˉbi-tis
					li ama-ˉbunt
				td: ul
					li ama-ˉvi-ˉ
					li ama-ˉvi-stī
					li ama-ˉvi-t
					li ama-ˉvi-mus
					li ama-ˉvi-stis
					li ama-ˉvērunt
				td(colspan=2) ama-ˉv-{$mood $tense imperfect "esse"}
			tr
				th passive
				td: ul
					li ama-ˉbi-⌫or
					li ama-ˉberis
					li ama-ˉbi-tur
					li ama-ˉbi-mur
					li ama-ˉbi-minī
					li ama-ˉbuntur
				td(colspan=3) {$mood $tense imperfect "esse"} ama-ˉtus
			tr
				th(rowspan=2) subjunctive
				th active
				td(rowspan=2) ama-⌫e-{$voice suffix B}
				td(rowspan=2) ama-ˉre-{$voice suffix B}
				td(rowspan=2)
				td ama-ˉveri-{$voice suffix B}
				td ama-ˉvisse-{$voice suffix B}
				td(rowspan=2)
			tr
				th passive
				td(colspan=2) {$mood $tense imperfect "esse"} ama-ˉtus
			tr
				th(rowspan=2) imperative
				th active
				td: ul
					li
					li ama-ˉ
					li
					li
					li ama-ˉte
					li
				td(rowspan=2)
				td: ul
					li
					li ama-ˉtō
					li ama-ˉtō
					li
					li ama-ˉtōte
					li ama-ntō
				td(rowspan=2, colspan=3)
			tr
				th passive
				td: ul
					li
					li ama-ˉre
					li
					li
					li ama-ˉminī
					li
				td: ul
					li
					li ama-ˉtōr
					li ama-ˉtōr
					li
					li
					li ama-ntor
			tr
				th(rowspan=2) infinitive
				th active
				td ama-ˉre
				td(rowspan=2)
				td ama-ˉtūrum esse
				td ama-ˉvisse
				td(colspan=2, rowspan=2)
			tr
				th passive
				td ama-ˉrī
				td ama-ˉtum īrī
