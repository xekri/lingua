extend /_layout.pug

block head
	- const title = "bengali"
	- const tags = ["draft"]

block main
	+section("alphabet")
		.textareas
			textarea.
				# মানবাধিকারের সার্বজনীন ঘোষণাপত্র

				## ধারা ১
				সমস্ত মানুষ স্বাধীনভাবে সমান মর্যাদা এবং অধিকার নিয়ে জন্মগ্রহণ করে। তাঁদের বিবেক এবং বুদ্ধি আছে; সুতরাং সকলেরই একে অপরের প্রতি ভ্রাতৃত্বসুলভ মনোভাব নিয়ে আচরণ করা উচিত।

				## ধারা ২
				এ ঘোষণায় উল্লেখিত স্বাধীনতা এবং অধিকারসমূহে গোত্র, ধর্ম, বর্ণ, শিক্ষা, ভাষা, রাজনৈতিক বা অন্যবিধ মতামত, জাতীয় বা সামাজিক উত্‍পত্তি, জন্ম, সম্পত্তি বা অন্য কোন মর্যাদা নির্বিশেষে প্রত্যেকের‌ই সমান অধিকার থাকবে।
				কোন দেশ বা ভূখণ্ডের রাজনৈতিক, সীমানাগত বা আন্তর্জাতিক মর্যাদার ভিত্তিতে তার কোন অধিবাসীর প্রতি কোনরূপ বৈষম্য করা হবেনা; সে দেশ বা ভূখণ্ড স্বাধীন‌ই হোক, হোক অছিভূক্ত, অস্বায়ত্বশাসিত কিংবা সার্বভৌমত্বের অন্য কোন সীমাবদ্ধতায় বিরাজমান।

				## ধারা ৩
				জীবন, স্বাধীনতা এবং দৈহিক নিরাপত্তায় প্রত্যেকের অধিকার আছে।
			textarea

		.tables(style="margin-top: 16px")
			table
				-
					let xsss = [
						[["ক", "k"], ["খ", "kh"], ["গ", "c"], ["ঘ", "ch"], ["ঙ", "g"], ["হ", "h"], ["", ""], ["অ", "\u09CD", "a ⱥ"], ["আ", "া", "ā"], ["", "", ""], ["", "", ""]],
						[["চ", "ḳ"], ["ছ", "ḳh"], ["জ", "ċ"], ["ঝ", "ċh"], ["ঞ", "ġ"], ["য", "j"], ["শ", "ẋ"], ["ই", "ি", "i"], ["ঈ", "ী", "ī"], ["এ", "ে", "e"], ["ঐ", "ৈ", "ai"]],
						[["ট", "ṫ"], ["ঠ", "ṫh"], ["ড", "ḋ"], ["ঢ", "ḋh"], ["ণ", "ṅ"], ["র", "r"], ["ষ", "ṡ"], ["ঋ", "ৃ", "ṛ"], ["ৠ", "ৄ", "ṝ"], ["", "", ""], ["", "", ""]],
						[["ত", "t"], ["থ", "th"], ["দ", "d"], ["ধ", "dh"], ["ন", "n"], ["ল", "l"], ["স", "s"], ["ঌ", "ৢ", "ḷ"], ["ৡ", "ৣ", "ḹ"], ["", "", ""], ["", "", ""]],
						[["প", "p"], ["ফ", "ph"], ["ব", "b"], ["ভ", "bh"], ["ম", "m"], ["ৱ", "v"], ["", ""], ["উ", "ু", "u"], ["ঊ", "ূ", "ū"], ["ও", "ো", "o"], ["ঔ", "ৌ", "au"]],
					]
				for xss in xsss
					tr
						for xs in xss
							td
								if xs[0]
									button= xs[0]
								if xs.length == 3
									if xs[1]
										button= xs[1]
									br
									|#{xs[2]}
								else
									br
									|#{xs[1]}

			table
				-
					xsss = [
						[
							["য়", "y"], ["ৰ", "r"], ["ড়", "ŗ"], ["ঢ়", "ŗh"], ["ৎ", "ţ"],
							["ং", "ģ"], ["ঃ", "ḩ"], ["ঁ", "ņ"], ["।", "."], ["ঽ", "'"],
						],
						[
							["০", 0], ["১", 1], ["২", 2], ["৩", 3], ["৪", 4], ["৫", 5], ["৬", 6], ["৭", 7], ["৮", 8], ["৯", 9],
						]
					]
				for xss in xsss
					tr
						for xs in xss
							td
								if xs[0]
									button= xs[0]
								br
								|#{xs[1]}

	+section("grammar")
		table.bn-table.center
			tr
				th(colspan=3, rowspan=2)
				th(colspan=4) Sg
				th(colspan=3) Pl
			tr
				for i in [0, 1]
					th N
					th A
					th G
					if i == 0
						th L
			tr
				th 1
				th
				th
				+tds(["আমি", "আমাকে", "আমার", "", "আমরা", "আমাদেরকে", "আমাদের"])
			tr
				th(rowspan=3) 2
				th(rowspan=3)
				th familiar
				+tds(["তুই", "তোকে", "তোর", "", "তোরা", "তোদেরকে", "তোদের"])
			tr
				th normal
				+tds(["তুমি", "তোমাকে", "তোমার", "", "তোমরা", "তোমাদেরকে", "তোমাদের"])
			tr
				th honourific
				+tds(["আপনি", "আপনাকে", "আপনার", "", "আপনারা", "আপনাদেরকে", "আপনাদের"])
			tr
				th(rowspan=9) 3
				th(rowspan=3) here
				th normal
				+tds(["এ", "একে", "এর", "", "এরা", "এদেরকে", "এদের"])
			tr
				th honourific
				+tds(["ইনি", "এঁকে", "এঁর", "", "এঁরা", "এঁদেরকে", "এঁদের"])
			tr
				th inanimate
				td(colspan=2) এটি, এটা
				td এটির, এটার
				td
				td(colspan=2) এগুলো
				td এগুলোর
			tr
				th(rowspan=3) there
				th normal
				+tds(["ও", "ওকে", "ওর", "", "ওরা", "ওদেরকে", "ওদের"])
			tr
				th honourific
				+tds(["উনি", "ওঁকে", "ওঁর", "", "ওঁরা", "ওঁদেরকে", "ওঁদের"])
			tr
				th inanimate
				td(colspan=2) ওটি, ওটা
				td ওটির, ওটার
				td
				td(colspan=2) ওগুলো
				td ওগুলোর
			tr
				th(rowspan=3) elsewhere
				th normal
				+tds(["সে", "তাকে", "তার", "", "তারা", "তাদেরকে", "তাদের"])
			tr
				th honourific
				+tds(["তিনি", "তাঁকে", "তাঁর", "", "তাঁরা", "তাঁদেরকে", "তাঁদের"])
			tr
				th inanimate
				td(colspan=2) সেটি, সেটা
				td সেটির, সেটার
				td
				td(colspan=2) সেগুলো
				td সেগুলোর
			tr
				th who?
				th
				th
				td কে
				td কাকে
				td কার
				td
				td কারা
				td(colspan=2) কাদের
			tr
				th what?
				th
				th
				td(colspan=2) কি
				td কিসের
				td কিসে
				td
				td
				td
			tr
				th(rowspan=3) which
				th(rowspan=3)
				th normal
				+tds(["যে", "যার", "যাকে", "", "যারা", "যাদের", "যাদের"])
			tr
				th honourific
				+tds(["যিনি", "যাঁর", "যাঁকে", "", "যাঁরা", "যাঁদের", "যাঁদের"])
			tr
				th inanimate
				td(colspan=2) যা
				td যার
				td যাতে
				td
				td
				td

		table.bn-table.center
			tr
				th(colspan=2, rowspan=2)
				th(colspan=3) present
				th(colspan=4) past
				th(rowspan=2) future
			tr
				for i in [0, 1]
					th simple
					th continuous
					th perfect
				th habitual
			tr
				th 1
				th
				+tds([
					"বলি", "বলছি", "বলেছি",
					"বললাম", "বলছিলাম", "বলেছিলাম", "বলতাম",
					"বলব"])
			tr
				th(rowspan=2) 2
				th familiar
				+tds([
					"বলিস", "বলছিস", "বলেছিস",
					"বললি", "বলছিলি", "বলেছিলি", "বলতিস, বলতি",
					"বলবি"])
			tr
				th normal
				+tds([
					"বল", "বলছ", "বলেছ",
					"বললে", "বলছিলে", "বলেছিলে", "বলতে",
					"বলবে"])
			tr
				th 3
				th normal
				+tds([
					"বলে", "বলছে", "বলেছে",
					"বলল", "বলছিল", "বলেছিল", "বলত",
					"বলবে"])
			tr
				th
				th honourific
				+tds([
					"বলেন", "বলছেন", "বলেছেন",
					"বললেন", "বলছিলেন", "বলেছিলেন", "বলতেন",
					"বলবেন"])

	+section("vocabulary")
		table.vocabulary.center
			+trs([
				["কালো", "Adj", "black"],
				["সাদা", "Adj", "white"],
				["পিতামাতা", "noun", "parent"],
				["ভাইবোন", "noun", "sibling"],
				["তারা", "noun", "star"],
				["লেখা", "verb", "write"],
				["পড়া", "verb", "read"],
				["বলা", "verb", "speak"],
				["শোনা", "verb", "hear"],
			])


	+section("reference")
		ul
			li: a(href="https://unicode.org/udhr/d/udhr_ben.html") UDHR
			li: a(href="https://en.wikipedia.org/wiki/Bengali_grammar") Wikipedia (grammar)
			li: a(href="https://en.wikipedia.org/wiki/Bengali%E2%80%93Assamese_script") Wikipedia (script)
